				programGroup="yes"
				desktop="yes"
				target="java"
				commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
				initialState="noShow"
				iconFile="trashcan_full"
				iconIndex="0"
				workingDirectory=""
				type="Application"
