				target="$INSTALL_PATH\run.bat"
				workingDirectory="$INSTALL_PATH"
				description="Lancer KanjiNoSensei"
				iconFile="$INSTALL_PATH\ico\kanjinosensei_icon.ico"
				iconIndex="0"
				initialState="noShow||normal||maximized||minimized"
				programGroup="yes||no"
				desktop="yes||no"
				applications="yes||no"
				startMenu="yes||no"
				startup="yes||no" />
				
